@page "/"

@inject IBLService blService;
@inject NavigationManager NavMan;

<PageTitle>Home</PageTitle>

<h1>Übersicht</h1>

<div class="dashboard-tiles row mb-4">
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Produkte gesamt im Lager</h5>
                <p class="card-text display-6">@totalProducts</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Anzahl Lots</h5>
                <p class="card-text display-6">@totalLots</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-center">
            <div class="card-body">
                <h5 class="card-title">Bald ablaufende Lots (@expiringSoon.Count())</h5>
                <p class="card-text">Innerhalb der nächsten @expiringDays Tagen</p>
            </div>
        </div>
    </div>
</div>

<!-- Expired list (red) -->
@if (expired.Any())
{
    <div class="card mb-3 bg-danger text-white">
        <div class="card-header">Abgelaufene Lots (@expired.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm table-striped table-dark">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Produkt</th>
                        <th>Ablaufdatum</th>
                        <th>Menge</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in expired)
                    {
                        <tr>
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Expiring soon (orange) -->
@if (expiringSoon.Any())
{
    <div class="card mb-3" style="background-color:#fff3cd;">
        <div class="card-header">Bald ablaufende Lots (@expiringSoon.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Produkt</th>
                        <th>Ablaufdatum</th>
                        <th>Menge</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in expiringSoon)
                    {
                        <tr>
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Long-term (green) -->
@if (longTerm.Any())
{
    <div class="card mb-3 bg-success text-white">
        <div class="card-header">Lots mit langer Laufzeit (@longTerm.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm table-striped table-dark">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Produkt</th>
                        <th>Ablaufdatum</th>
                        <th>Menge</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in longTerm)
                    {
                        <tr>
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<style>
    .dashboard-tiles .card { min-height: 110px; display:flex; align-items:center; justify-content:center; }
    .dashboard-tiles .card .display-6 { margin:0; }
    .card-header { font-weight:600; }
    @@media (min-width: 768px) {
        .dashboard-tiles .col-md-4 { display:flex; }
        .dashboard-tiles .col-md-4 .card { flex:1; }
    }
</style>

@code {
    private List<Lot> Lots { get; set; } = new List<Lot>();
    private IEnumerable<Lot> expired = Array.Empty<Lot>();
    private IEnumerable<Lot> expiringSoon = Array.Empty<Lot>();
    private IEnumerable<Lot> longTerm = Array.Empty<Lot>();

    private int totalProducts = 0;
    private int totalLots = 0;
    private int expiringDays = 7;

    protected override async Task OnInitializedAsync()
    {
        Lots = await blService.GetAllLotsAsync();

        var today = DateTime.Today;
        var soonDate = today.AddDays(expiringDays);

        expired = Lots.Where(l => l.ExpiryDate < today).OrderBy(l => l.ExpiryDate).ToList();
        expiringSoon = Lots.Where(l => l.ExpiryDate >= today && l.ExpiryDate <= soonDate).OrderBy(l => l.ExpiryDate).ToList();
        longTerm = Lots.Where(l => l.ExpiryDate > soonDate).OrderBy(l => l.ExpiryDate).ToList();

        totalLots = Lots.Count;
        totalProducts = Lots.Sum(l => l.Amount);
    }
}
