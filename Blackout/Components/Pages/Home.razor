@page "/"

@inject IBLService blService;
@inject NavigationManager NavMan;

<PageTitle>Home</PageTitle>

<h1>Dashboard</h1>

<div class="dashboard-tiles row mb-4">
    <div class="col-md-4">
        <a href="/products" class="card card-link card-primary text-center text-decoration-none">
            <div class="card-body">
                <h5 class="card-title">Total Products in Inventory</h5>
                <p class="card-text display-6">@totalProducts</p>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/lots" class="card card-link card-success text-center text-decoration-none">
            <div class="card-body">
                <h5 class="card-title">Number of Lots</h5>
                <p class="card-text display-6">@totalLots</p>
            </div>
        </a>
    </div>
    <div class="col-md-4">
        <a href="/lots" class="card card-link card-warning text-center text-decoration-none">
            <div class="card-body">
                <h5 class="card-title">Expiring Lots (@expiringSoon.Count())</h5>
                <p class="card-text">Innerhalb der nï¿½chsten @expiringDays Tagen</p>
            </div>
        </a>
    </div>
</div>

<!-- Expired list (red) -->
@if (expired.Any())
{
    <div class="card mb-3 bg-danger text-white">
        <div class="card-header">Expired Lots (@expired.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm table-striped table-dark">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Product</th>
                        <th>Ablaufdatum</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in expired)
                    {
                        <tr class="table-row-link" @onclick="@(() => NavigateToEditLot(l.LotID))">
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Expiring soon (orange) -->
@if (expiringSoon.Any())
{
    <div class="card mb-3" style="background-color:#fff3cd;">
        <div class="card-header">Lots Expiring Soon (@expiringSoon.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Product</th>
                        <th>Expiry Date</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in expiringSoon)
                    {
                        <tr class="table-row-link" @onclick="@(() => NavigateToEditLot(l.LotID))">
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<!-- Long-term (green) -->
@if (longTerm.Any())
{
    <div class="card mb-3 bg-success text-white">
        <div class="card-header">Long Term Lots (@longTerm.Count())</div>
        <div class="card-body p-0">
            <table class="table mb-0 table-sm table-striped table-dark">
                <thead>
                    <tr>
                        <th>LotID</th>
                        <th>Product</th>
                        <th>Expiry Date</th>
                        <th>Quantity</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var l in longTerm)
                    {
                        <tr class="table-row-link" @onclick="@(() => NavigateToEditLot(l.LotID))">
                            <td>@l.LotID</td>
                            <td>@l.Product?.Title</td>
                            <td>@l.ExpiryDate.ToShortDateString()</td>
                            <td>@l.Amount</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

<style>
    .dashboard-tiles .card-link { 
        min-height: 110px; 
        display:flex; 
        align-items:center; 
        justify-content:center;
        transition: all 0.3s ease;
        border: none;
        color: white !important;
        font-weight: 600;
    }
    
    .dashboard-tiles .card-primary {
        background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
    }
    
    .dashboard-tiles .card-success {
        background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
    }
    
    .dashboard-tiles .card-warning {
        background: linear-gradient(135deg, #ffc107 0%, #e0a800 100%);
        color: #333 !important;
    }
    
    .dashboard-tiles .card-link:hover {
        transform: translateY(-4px) scale(1.02);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        filter: brightness(1.1);
    }
    
    .dashboard-tiles .card-link .display-6 { margin:0; }
    .card-header { font-weight:600; }
    
    .table-row-link {
        cursor: pointer;
        transition: all 0.15s ease;
    }
    .table-row-link:hover {
        background-color: #d1ecf1 !important;
        font-weight: 500;
        box-shadow: inset 0 0 5px rgba(0, 0, 0, 0.1);
    }
    
    @@media (min-width: 768px) {
        .dashboard-tiles .col-md-4 { display:flex; }
        .dashboard-tiles .col-md-4 .card-link { flex:1; }
    }
</style>

@code {
    private List<Lot> Lots { get; set; } = new List<Lot>();
    private IEnumerable<Lot> expired = Array.Empty<Lot>();
    private IEnumerable<Lot> expiringSoon = Array.Empty<Lot>();
    private IEnumerable<Lot> longTerm = Array.Empty<Lot>();

    private int totalProducts = 0;
    private int totalLots = 0;
    private int expiringDays = 7;

    private void NavigateToEditLot(int lotId)
    {
        NavMan.NavigateTo($"/lots/{lotId}");
    }

    protected override async Task OnInitializedAsync()
    {
        Lots = await blService.GetAllLotsAsync();

        var today = DateTime.Today;
        var soonDate = today.AddDays(expiringDays);

        expired = Lots.Where(l => l.ExpiryDate < today).OrderBy(l => l.ExpiryDate).ToList();
        expiringSoon = Lots.Where(l => l.ExpiryDate >= today && l.ExpiryDate <= soonDate).OrderBy(l => l.ExpiryDate).ToList();
        longTerm = Lots.Where(l => l.ExpiryDate > soonDate).OrderBy(l => l.ExpiryDate).ToList();

        totalLots = Lots.Count;
        totalProducts = Lots.Sum(l => l.Amount);
    }
}
